<table cellspacing="0" id="result_list" >
  <thead>
    <tr>
      <th class="action-checkbox-column" ><input type="checkbox" id="action-toggle" /></th>
    <% for attribute in attributes -%>
      <%%= sortable_header( "<%= attribute.name %>", "<%= attribute.human_name %>" ) %>
    <% end -%>
    </tr>
  </thead>

  <tbody>
  <%% @<%= plural_table_name %>.each_with_index do |<%= singular_table_name %>,i| %>
    <tr class='<%%= (i%2) == 0 ? 'row1': 'row2' %>' >
          <td><%%= check_box_tag "ids[]", <%= singular_table_name %>.id  %></td>  
      <% attributes.each_with_index{|attribute,i| -%>
        <% if( i == 0 ) -%>
          <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <% else -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <% end -%>
      <% } -%>
    </tr>
  <%% end %>
  </tbody>
</table>

<p class="paginator" >
  <%%= will_paginate @<%= plural_table_name %> %>
  <span style="float:right;" ><%%= page_entries_info @<%= plural_table_name %> %> </span>
</p>
